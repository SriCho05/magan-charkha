rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files, which is fine for product images.
    match /{allPaths=**} {
      allow read;
    }

    // Explicitly allow write access only for authenticated users on files
    // inside the 'products' folder.
    match /products/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}

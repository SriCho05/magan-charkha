
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match the 'products' folder where all product images are stored.
    match /products/{allPaths=**} {
      // Allow anyone to read the product images.
      allow read: if true;
      // Allow only authenticated users (the admin) to upload, update, or delete images.
      allow write: if request.auth != null;
    }
  }
}
